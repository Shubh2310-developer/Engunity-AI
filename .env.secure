# =================================
# ENGUNITY AI - SECURE ENVIRONMENT CONFIGURATION
# =================================
# This file contains all the environment variables that should be set
# Copy this to .env files and replace with actual values
# NEVER commit actual credentials to version control

# =================================
# Supabase Configuration
# =================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_KEY=your_supabase_key_here
DATABASE_URL=your_database_url_here

# =================================
# Supabase S3-Compatible Storage
# =================================
SUPABASE_S3_ACCESS_KEY_ID=your_s3_access_key_id_here
SUPABASE_S3_SECRET_ACCESS_KEY=your_s3_secret_access_key_here
SUPABASE_S3_ENDPOINT=your_s3_endpoint_here
SUPABASE_S3_REGION=your_s3_region_here

# =================================
# AI & ML Services
# =================================
NEXT_PUBLIC_GROQ_API_KEY=your_groq_api_key_here
GROQ_API_KEY=your_groq_api_key_here
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# =================================
# Database Configuration
# =================================
MONGODB_URI=your_mongodb_uri_here
MONGODB_DB_NAME=your_mongodb_db_name_here
MONGODB_CONNECTION_STRING=your_mongodb_connection_string_here

# =================================
# Authentication & Security
# =================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=your_nextauth_url_here

# =================================
# Redis Configuration
# =================================
REDIS_URL=your_redis_url_here

# =================================
# Backend API Configuration
# =================================
NEXT_PUBLIC_API_URL=your_api_url_here
NEXT_PUBLIC_API_VERSION=v1
BACKEND_URL=your_backend_url_here
RAG_API_BASE=your_rag_api_base_here
RAG_BACKEND_URL=your_rag_backend_url_here
API_KEY=your_api_key_here

# =================================
# Development & Testing
# =================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# =================================
# Feature Flags
# =================================
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_HISTORY=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true